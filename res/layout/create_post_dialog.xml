<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ghostwhite"
    android:orientation="vertical" >

	<TextView
		android:id="@+id/post_title_header"
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:gravity="top|left"
  		android:text="Title"
  		android:textColor="@color/aboutcolor"
  		android:textSize="20dp"
  	/>
  	
	<EditText
		android:id="@+id/post_title"
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:gravity="top|left"
  		android:layout_below="@+id/post_title_header"
  	/>
  	
  	<TextView
  		android:id="@+id/write_post_header"
  		android:layout_height="wrap_content"
  		android:layout_width="fill_parent"
  		android:gravity="top|left"
  		android:text="Message"
  		android:layout_below="@+id/post_title"
  		android:textColor="@color/aboutcolor"
  		android:textSize="20dp"
  	/>
  	
  	<EditText
  		android:id="@+id/write_post"
  		android:layout_height="250dp"
  		android:layout_width="fill_parent"
  		android:gravity="top|left"
  		android:layout_below="@+id/write_post_header"
  	/>
  	
  	<Button
  	    style="@style/button.borderbuttonred"
  		android:id="@+id/cancel_post"
  		android:layout_height="wrap_content"
  		android:layout_width="150dp"
  		android:gravity="center|center"
  		android:layout_below="@+id/write_post"
  		android:text="Cancel"
  	/>
  	
  	<Button
  	    style="@style/button.borderbuttonred"
  		android:id="@+id/create_post"
  		android:layout_height="wrap_content"
  		android:layout_width="150dp"
  		android:gravity="center|center"
  		android:layout_below="@+id/write_post"
  		android:text="Submit"
  		android:layout_toRightOf="@+id/cancel_post"
  	/>
  	

</RelativeLayout>