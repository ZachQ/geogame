<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>
    
    <style name="button.borderbutton">
        <item name="android:background">@drawable/buttonbox</item>
        <item name="android:textColor">@color/textwhite</item>
    </style>
    
